<main>
    <div class="container">

        <section class="details">
            <h1>Theater title: {{currPlay.title}}</h1>
            <div>
                <img src={{currPlay.imageUrl}} />
            </div>
        </section>

        <section class="details">
            <h3>Theater Description</h3>
            <p>{{currPlay.description}}</p>

            {{#if username}}
                <div class="buttons">
                    {{#if isOwner}}
                        <a class="btn delete" href="/catalog/{{currPlay._id}}/delete">Delete</a>
                        <a class="btn edit" href="/catalog/{{currPlay._id}}/edit">Edit</a>
                    {{else}}
                        {{#if isLiked}}
                            <span class="liked">You have already liked this play!</span>
                        {{else}}
                            <a class="btn like" href="/catalog/{{currPlay._id}}/like">Like</a>
                        {{/if}}
                    {{/if}}
                </div>
            {{/if}}

        </section>
        
    </div>
</main>